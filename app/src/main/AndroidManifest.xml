<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ufo.imagedemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UFOGridViewActivity">
        </activity>
        <activity
            android:name="com.ufo.ccphotoview.CCPhotoViewActivity"
            android:theme="@style/CCPhotoViewTheme.ActionBarOverlay">
        </activity>
        <activity
            android:name="com.ufo.ccphotoview.CCPhotoViewWithDelActivity"
            android:theme="@style/CCPhotoViewTheme.ActionBarOverlay">
        </activity>
        <activity
            android:name="com.ufo.ccphotoview.CCPhotoViewWithTextActivity"
            android:theme="@style/CCPhotoViewTheme.ActionBarOverlay">
        </activity>
        <activity android:name=".UFOPhotoPreviewActivity">
        </activity>
        <activity android:name=".GridViewNotifyActivity">
        </activity>
        <activity
            android:name="com.ufo.ccphotopaint.CCPhotoPaintActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
    </application>

</manifest>